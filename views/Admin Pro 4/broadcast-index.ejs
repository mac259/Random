              <div class="card">
                <div class="card-header card-header-rose">
                  <h4 class="card-title">Broadcast Message</h4> <!-- REVIEW: After clicking 'send message' the input fields must be reset -->
                  <p class="card-category">Create Message</p>
                </div>
                <div class="card-body">
                  <form action="/broadcast" method="post">
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label class="bmd-label-floating">Subject</label>
                          <input required="required" type="text" class="form-control" name="subject">
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label class="bmd-label-floating">Description</label>
                          <textarea class="form-control" rows="4" name="description"></textarea>
                        </div>
                      </div>
                    </div><br>
                    <div class="row">
                      <div class="col-md-4">
                        <select class="selectpicker contain pull-left" data-style="btn btn-secondary" title="Single Select" name='elective_id'>
                          <option class="resp" disabled selected>Sessions</option>
                          <option class="resp" value=0>All Ongoing Sessions</option>
                          <% for(l=0;l<rows.length;l++) { %>
                          <option class="resp" value='<%= rows[l].elective_id %>'><%= rows[l].elective_name %></option>
                          <% } %>
                        </select>
                      </div>
                      <div class="col-md-8 grant-div send-message-div">
                        <!--<button type="submit" class="btn btn-rose pull-right grant-access send-message">Send Message</button>-->
                        <button type="submit" class="btn btn-rose pull-right grant-access send-message" onclick='swal({ title:"Success!", text: "Message Sent!", type: "success", buttonsStyling: false, confirmButtonClass: "btn btn-success"})'>Send Message</button>
                        <div class="clearfix"></div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <div class="col-md-6">
